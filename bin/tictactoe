#!/usr/bin/env ruby

require_relative '../config/environment'


puts "Hey there!"
puts "What kind of game do you want to play?"
puts "1. 1-Player"
puts "2. 2-Player"
puts "3. 0-Player"

players = []
input = gets.strip

def menu
  if input == '1'
    players = [Players::Human.new(), Players::Computer.new()]
  elsif input == '2'
    players = [Players::Human.new(), Players::Human.new()]
  elsif input == '3'
    players = [Players::Computer.new(), Players::Computer.new()]
  else
    puts 'try again.'
    menu
  end
end

menu

puts "Who should go first? Type 'X' or 'O'"
token = gets.strip
players[0] = players[0].class.new(token)

Game.new(players[0], players[1])
