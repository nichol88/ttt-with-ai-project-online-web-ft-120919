#!/usr/bin/env ruby

require_relative '../config/environment'


puts "Hey there!"
puts "What kind of game do you want to play?"
puts "1. 1-Player"
puts "2. 2-Player"
puts "3. 0-Player"

players = []

def menu
  i = gets.strip
  if i == '1'
    players = [Players::Human.new(), Players::Computer.new()]
  elsif i == '2'
    players = [Players::Human.new(), Players::Human.new()]
  elsif i == '3'
    players = [Players::Computer.new(), Players::Computer.new()]
  else
    puts 'try again.'
    menu
  end
  #binding.pry
end

menu

puts "Who should go first? Type 'X' or 'O'"
token = gets.strip

if token == 'X'
  players[1] = players[1].class.new('O')
else
  players[0] = players[0].class.new('O')
end

Game.new(players[0], players[1])
